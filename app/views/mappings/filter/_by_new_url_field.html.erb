<% single_filter_form ||= false %>
<div class="form-group">
  <%= label_tag :new_url_contains, 'New URL' %>
  <% if single_filter_form %>
    <%= hidden_field_tag 'path_contains', @filter.try(:path_contains) %>
    <%= hidden_field_tag 'tagged', params[:tagged] %>
    <%= hidden_field_tag 'type', params[:type] %>
    <%= hidden_field_tag 'sort', params[:sort] %>
    <div class="input-group">
  <% end %>
  <%= text_field_tag :new_url_contains, @filter.try(:new_url_contains), class: 'form-control', placeholder: 'eg https://www.gov.uk' %>
  <% if single_filter_form %>
    <span class="input-group-btn">
      <%= button_tag button_text, name: nil, class: 'btn btn-default ' %>
    </span>
    </div>
  <% end %>
</div>
