<li class="if-no-js-hide <% if @filter.type %>selected-and-available<% end %>">
  <% if @filter.type %>
    <%= filter_remove_option_link(@site, nil, :type) %>
    <%= filter_option_link(@site, @filter.type.pluralize.titleize, {selected: true}) %>
  <% else %>
    <%= filter_option_link(@site, 'Type') %>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <% if @filter.type %>
      <li>
        <%= link_to 'All types', @filter.query.without_type, class: 'inherit' %>
      </li>
    <% end %>
    <% Mapping::SUPPORTED_TYPES.each do |type| %>
      <li>
        <%= link_to type.titleize, @filter.query.with_type(type), class: 'inherit' %>
      </li>
    <% end %>
  </ul>
</li>
