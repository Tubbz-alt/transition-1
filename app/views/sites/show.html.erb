<% content_for(:page_title, @site.default_host.hostname) %>

<% breadcrumb :site, @site %>

<div class="page-title-with-border">
  <h1>
    <span class="small"><%= @site.default_host.hostname %></span>
  </h1>

  <%= link_to "Edit Mappings", site_mappings_path(@site), class: 'btn btn-default' %>
  <%= link_to 'View Analytics', summary_site_hits_path(@site), class: 'btn btn-default' %>
</div>

<dl class="dl-horizontal">
  <dt>Site</dt>
  <dd><%= @site.abbr %></dd>

  <dt>Homepage</dt>
  <dd><%= link_to @site.homepage, @site.homepage, class: 'breakable' %></dd>

  <dt>Query parameters</dt>
  <dd><%= @site.query_params.presence || 'N/A' %></dd>

  <dt><abbr title="The National Archive">TNA</abbr> timestamp</dt>
  <dd><%= @site.tna_timestamp.to_formatted_s(:long) %> (<%= @site.tna_timestamp.to_formatted_s(:number) %>)</dd>

  <dt>Hostname aliases</dt>
  <dd><%= @site.hosts.pluck(:hostname).join(', ') %></dd>
</dl>
